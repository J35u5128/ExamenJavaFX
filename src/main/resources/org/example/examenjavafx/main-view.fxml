<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.examenjavafx.controllers.MainController">
<!-- SplitPane divide la ventana en dos secciones: tabla y formulario -->
<SplitPane dividerPositions="0.7026726057906458" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

    <!-- Panel Izquierdo: Tabla de Videojuegos -->
    <AnchorPane minWidth="100.0" prefWidth="600.0">
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="Lista de usuarios">
                <padding>
                    <Insets bottom="10.0" left="10.0" top="10.0" />
                </padding>
            </Label>
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colCorreo" prefWidth="180.0" text="Correo" />
                    <TableColumn fx:id="colPlataforma" prefWidth="150.0" text="Plataforma" />
                    <TableColumn fx:id="colRol" prefWidth="80.0" text="Rol" />
                    <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha de creación" />
                    <TableColumn fx:id="colHora" prefWidth="150.0" text="Hora de creación" />
                </columns>
                <!-- Asegura que las columnas llenen el espacio disponible -->
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Button onAction="#handleNuevo" text="Nuevo Usuario" />
            </HBox>
        </VBox>
    </AnchorPane>

    <!-- Panel Derecho: Formulario de Detalles/Edición -->
    <AnchorPane minWidth="100.0" prefWidth="300.0">
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Detalles del Usuario">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <!-- GridPane para organizar las etiquetas y campos de texto -->
            <GridPane hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>

                <Label text="Correo:" />
                <TextField fx:id="txtCorreo" GridPane.columnIndex="1" />

                <Label text="Plataforma:" GridPane.rowIndex="1" />
                <TextField fx:id="txtPlataforma" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Versión:" GridPane.rowIndex="2" />
                <TextField fx:id="txtVersion" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <CheckBox fx:id="chkAdmin" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Admin:" GridPane.rowIndex="3" />
            </GridPane>

            <!-- Contenedor para los botones de acción -->
            <HBox alignment="CENTER" spacing="15.0">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
                <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleGuardar" prefWidth="100.0" text="Guardar" />
                <!-- Estilo para el botón Eliminar para hacerlo más visible -->
                <Button fx:id="btnEliminar" disable="true" mnemonicParsing="false" onAction="#handleEliminar" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Eliminar" />
            </HBox>
        </VBox>
    </AnchorPane>
</SplitPane>
</AnchorPane>
